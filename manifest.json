{
  "manifest_version": 2,
  "name": "Pushstr",
  "description": "Secure messaging via Nostr",
  "version": "0.0.4",
  "icons": {
    "48": "pushtr_48.png",
    "96": "pushtr_96.png",
    "128": "pushtr_128.png"
  },
  "permissions": [
    "storage",
    "notifications",
    "contextMenus",
    "https://blossom.primal.net/*",
    "downloads"
  ],
  "browser_specific_settings": {
    "gecko": {
      "id": "pushstr@local",
      "data_collection_permissions": {
        "required": [
          "personalCommunications"
        ]
      }
    }
  },
  "background": {
    "page": "background.html"
  },
  "browser_action": {
    "default_title": "Pushstr",
    "default_popup": "popup.html",
    "default_icon": {
      "48": "pushtr_48.png",
      "96": "pushtr_96.png",
      "128": "pushtr_128.png"
    }
  },
  "options_ui": {
    "page": "options.html",
    "open_in_tab": true
  },
  "web_accessible_resources": [
    "vendor/nostr-tools.bundle.js",
    "wasm_crypto.js",
    "wasm_crypto_bg.wasm"
  ]
}
